<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_item">

    <TextView
        android:id="@+id/tvTitleStyleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@color/gold"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/rbtnGoupStyle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/rbtnGoupStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleStyleText">

        <RadioButton
            android:id="@+id/rbtnNormal"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/teal_200"
            android:text="нормальный"
            android:textColor="@color/teal_200"
            android:textSize="16sp" />

        <RadioButton
            android:id="@+id/rbtnBold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/teal_200"
            android:text="жирный"
            android:textColor="@color/teal_200"
            android:textSize="16sp"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/rbtnItalic"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/teal_200"
            android:text="курсив"
            android:textColor="@color/teal_200"
            android:textSize="16sp"
            android:textStyle="italic" />

        <RadioButton
            android:id="@+id/rbtnBoldItalic"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:buttonTint="@color/teal_200"
            android:text="жирный курсив"
            android:textColor="@color/teal_200"
            android:textSize="16sp"
            android:textStyle="bold|italic" />
    </RadioGroup>
</androidx.constraintlayout.widget.ConstraintLayout>