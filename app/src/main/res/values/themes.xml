<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ProjectShopping" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>

    </style>

    <style name="MyThemeWhatsapp" parent="Base.Theme.ProjectShopping">
        <item name="colorPrimary">@color/whatsapp</item>
        <item name="colorControlNormal">@color/teal_200</item>
        <item name="colorAccent">@color/gold</item>
        <item name="toolbarStyle">@style/MyThemeWhatsapp</item>
    </style>
    <style name="MyCheckBox" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
       <!-- <item name="colorControlNormal">@android:color/holo_green_light</item>-->
        <item name="colorControlActivated">@color/gold</item>
    </style>
    <style name="MyThemeBlue" parent="Base.Theme.ProjectShopping">
    <item name="colorPrimary">@color/blue_dark</item>
    <item name="colorControlNormal">@color/red</item>
    <item name="colorAccent">@color/gold</item>
        <item name="toolbarStyle">@style/MyThemeBlue</item>
    </style>
</resources>